@using LemonLime.DTOs;
@model PaginatedList<LemonLime.DTOs.Recipe.RecipeHomeResponse>

@functions {
    public string FormatRating(double rating)
    {
        if (rating % 1 == 0)
        {
            return rating.ToString("0");
        }
        else if ((rating * 10) % 1 == 0)
        {
            return rating.ToString("0.0");
        }
        else
        {
            return rating.ToString("0.00");
        }
    }
}

@{
    ViewData["Title"] = "Recipes";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="d-flex align-items-center mb-3">
                <i class="fas fa-lemon me-2" style="font-size: 2rem; color: #cdd64f;"></i>
                <h2 class="mb-0">@ViewData["Title"]</h2>
            </div>
            <div class="row">
                @if (Model.Any())
                {
                    @foreach (var recipe in Model)
                    {
                        <div class="col-md-3 mb-3 d-flex">
                            <a asp-action="Details" asp-controller="Recipes" asp-route-id="@recipe.Id" class="card flex-fill text-decoration-none">
                                <div class="card">
                                    <img src="~/@recipe.ImageUrl" class="card-img-top img-fluid" alt="@recipe.Title" style="height: 15rem; object-fit: cover;">
                                    <div class="card-body">
                                        <h5 class="card-title text-center">@recipe.Title</h5>
                                        <div class="rating text-center">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="bi bi-star@(i <= Math.Round(recipe.AverageRating + 0.01) ? "-fill" : "")"></i>
                                            }
                                            <span class="rating-text">@FormatRating(recipe.AverageRating)</span>
                                        </div>
                                        <p class="card-text text-center">(@recipe.CommentCount Comments)</p>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="col-md-12 text-center">
                        <p>No recipes found.</p>
                    </div>
                }
            </div>

            <!-- Pagination -->
            <div class="row mt-3">
                <div class="col-sm-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(Model.PageIndex - 1)" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                            }

                            @for (var i = 1; i <= Model.TotalPages; i++)
                            {
                                if (i == Model.PageIndex)
                                {
                                    <li class="page-item active">
                                        <a class="page-link">@i</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="page-item">
                                        <a class="page-link" href="?page=@i">@i</a>
                                    </li>
                                }
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="?page=@(Model.PageIndex + 1)" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item disabled">
                                    <a class="page-link" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-img-top {
        object-fit: cover;
    }

    .card-img-top {
        height: 15rem;
    }

    .rating {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 0.5rem;
    }

        .rating i {
            color: #ddd;
            font-size: 1.5rem;
        }

            .rating i.bi-star-fill {
                color: #ffd700;
            }

            .rating i.bi-star-half {
                color: #ffd700;
            }

    .rating-text {
        margin-left: 0.5rem;
        font-size: 1rem;
        color: darkblue;
    }

    .card a {
        text-decoration: none;
        color: inherit;
}

    .card-title, .card-text {
        color: #000;
    }

    .card a:hover {
        text-decoration: none;
        color: #007bff;
}
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.3/font/bootstrap-icons.min.css">
