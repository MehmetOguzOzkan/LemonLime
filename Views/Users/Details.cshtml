@model LemonLime.DTOs.User.UserDetailsResponse

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <h2>User Details</h2>
            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <img src="@Model.ProfilePicture" alt="Profile Picture" class="rounded-circle img-fluid border border-3" style="width: 200px; height: 200px;">
                        </div>
                        <div class="col-md-8 mt-3">
                            <p class="fs-5"><strong>Username:</strong> @Model.Username</p>
                            <p class="fs-5"><strong>Email:</strong> @Model.Email</p>
                            <p class="fs-5"><strong>Role:</strong> @Model.Role</p>
                            <p class="fs-5"><strong>Created Time:</strong> @Model.CreatedTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
                            <p class="fs-5"><strong>Updated Time:</strong> @Model.UpdatedTime.ToString("yyyy-MM-dd HH:mm:ss")</p>
                            <div class="d-flex justify-content-end mt-3">
                                <a class="btn btn-warning me-2" asp-action="GetRecipesByUserId" asp-controller="Recipes" asp-route-userId="@Model?.Id">
                                    <i class="fas fa-utensils"></i> Recipes
                                </a>
                                <a class="btn btn-secondary" asp-action="Index">
                                    <i class="fas fa-home"></i> Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}
