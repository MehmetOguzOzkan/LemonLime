@model LemonLime.DTOs.User.UserDetailsResponse

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <h2 class="d-flex justify-content-between align-items-center">
        Delete User
        <a asp-action="Index" class="btn btn-secondary d-flex align-items-center">
            <i class="fas fa-arrow-left me-2"></i> Back to List
        </a>
    </h2>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-1" style="padding: 5% 3%; border: dashed;">
                <div class="card-body">
                    <h3>Are you sure you want to delete this user?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.ProfilePicture)
                        </dt>
                        <dd class="col-sm-8">
                            <img src="@Model.ProfilePicture" alt="@Model.Username's Profile Picture" class="img-thumbnail" style="width: 100px; height: 100px;" />
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Username)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Username)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Role)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Role)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CreatedTime)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CreatedTime)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.UpdatedTime)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UpdatedTime)
                        </dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i> Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
