@model LemonLime.DTOs.Tag.TagResponse

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h2 class="d-flex justify-content-between align-items-center">
        Tag Details
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary me-2">
                <i class="fas fa-edit me-2"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i> Back to List
            </a>
        </div>
    </h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-1" style="padding: 5% 3%; border: dashed;">
                <div class="card-body">
                    <h4 class="mb-4">Tag Information</h4>
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.CreatedTime)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.CreatedTime)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.UpdatedTime)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.UpdatedTime)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
